page {
  background: #f7f8fa;
}

.search {
  margin: 20rpx 0;
}

.unit {
  margin: 30rpx 0 30rpx 28rpx;
  color: rgba(69, 90, 100, 0.6);
  font-size: 30rpx;
  display: flex;
  align-items: center;
  line-height: 1;
}

.unit > text {
  margin-left: 10rpx;
  font-size: 20rpx;
}

.tab {
  margin: 20rpx 0;
}

.title {
  margin-left: 10px;
  display: inline-block;
  vertical-align: middle;
}

.empty {
  width: 100%;
  text-align: center;
  font-size: 14px;
  color: #999;
  padding: 20px 0;
}

.tab {
  margin: 10px 0;
}

.remove {
  width: 65px;
  height: 100%;
  background: #ee0a24;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
}